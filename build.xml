<project name="jcampfire">

    <target name="init">
    	<property name="dist.dir" value="_dist"/>
		<property name="package.dir" value="_pkg"/>
    	<property name="obj.dir" value="_obj"/>
    	<property name="doc.dir" value="doc"/>
    	<property name="jar.name" value="jcampfire.jar"/>
    </target>

	<target name="clean" depends="init" description="Clean build artifacts">
		<delete dir="${dist.dir}"></delete>
		<delete dir="${obj.dir}"></delete>
		<delete dir="${package.dir}"></delete>
	</target>
	
	<target name="build" depends="init" description="Build and package jcampfire">
		<mkdir dir="${dist.dir}"/>
		<mkdir dir="${obj.dir}"/>
		<mkdir dir="${package.dir}/jcampfire"/>
		
		<javac srcdir="src"
         	destdir="${obj.dir}"
         	debug="on"	/>
		
		<javadoc destdir="${package.dir}/jcampfire/${doc.dir}" 
			access="public"
			windowtitle="JCampfire API Documentation"
			classpath="${obj.dir}">
			<fileset dir="src">
			    <include name="ca/softwareengineering/jcampfire/*.java"/>
			</fileset>
		</javadoc>

		<jar destfile="${package.dir}/jcampfire/${jar.name}">
			<fileset dir="${obj.dir}">
			    <include name="**/**"/>
				<exclude name="manifest"/>
			</fileset>
			<manifest>
				<attribute name="Main-Class" value="ca.softwareengineering.jcampfire.exec.JCampfireCmd"/>
			</manifest>
		</jar>
		
		<tar compression="gzip" basedir="${package.dir}" destfile="${dist.dir}/jcampfire.tar.gz" />
		<move file="${package.dir}/jcampfire/jcampfire.jar" todir="${dist.dir}" />
	</target>
</project>
